{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(build)",
    ":semanticCommitScopeDisabled",
    ":automergeAll",
    ":automergeBranch",
    ":disableDependencyDashboard",
    ":onlyNpm",
    ":label(dependencies)"
  ],
  "packageRules": [
    {
      "groupName": "Vite packages",
      "matchUpdateTypes": "major",
      "matchSourceUrlPrefixes": ["https://github.com/vitejs/"]
    }
  ],
  "gitNoVerify": ["commit", "push"]
}
